{
  "compilerOptions": {
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "lib": ["es5", "es6", "dom", "esnext"],
    "allowJs": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "compileOnSave": true,
  "include": [
    "./packages/**/*.ts",
    "./packages/**/*.tsx",
  ],
  "exclude": [
    "./node_modules/**/*"
  ]
}